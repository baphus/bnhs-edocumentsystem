###############################################################################
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# This file is for local development only
# Use .env.local for machine-specific overrides
###############################################################################

###############################################################################
# APPLICATION CONFIGURATION
###############################################################################
APP_NAME="BNHS Document Request System"
APP_ENV=local
APP_KEY=base64:YOUR_LOCAL_APP_KEY
APP_DEBUG=true
APP_URL=http://localhost:8000

# Application Settings
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

###############################################################################
# DATABASE CONFIGURATION (Local MySQL)
###############################################################################
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=bnhs_dev
DB_USERNAME=root
DB_PASSWORD=root
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Enable Foreign Key Constraints
DB_FOREIGN_KEYS=true

###############################################################################
# CACHE CONFIGURATION (Development: File)
###############################################################################
CACHE_DRIVER=file
CACHE_TTL=3600
CACHE_PREFIX=bnhs_cache:

# Redis (optional for development)
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

###############################################################################
# SESSION CONFIGURATION
###############################################################################
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

###############################################################################
# QUEUE CONFIGURATION (Development: Sync/Database)
###############################################################################
QUEUE_CONNECTION=sync
QUEUE_FAILED_TABLE=failed_jobs

###############################################################################
# MAIL CONFIGURATION (Development: Log or Mailtrap)
###############################################################################
MAIL_DRIVER=log
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=YOUR_MAILTRAP_USERNAME
MAIL_PASSWORD=YOUR_MAILTRAP_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_NAME="BNHS Document Request System (DEV)"
MAIL_FROM_ADDRESS=dev@localhost

###############################################################################
# LOGGING CONFIGURATION
###############################################################################
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

###############################################################################
# SECURITY & ENCRYPTION
###############################################################################
CIPHER=AES-256-CBC

###############################################################################
# CORS & SECURITY HEADERS (Development: Permissive)
###############################################################################
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_MAX_AGE=3600
CORS_CREDENTIALS=true

###############################################################################
# RATE LIMITING (Development: Disabled)
###############################################################################
RATE_LIMIT_ENABLED=false

###############################################################################
# FILE STORAGE CONFIGURATION (Development: Local)
###############################################################################
FILESYSTEM_DISK=local
FILESYSTEM_VISIBILITY=public

###############################################################################
# MONITORING & DEBUGGING (Development: Enabled)
###############################################################################
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true
TINKER_ENABLED=true
LARAVEL_PAIL_ENABLED=true

###############################################################################
# DEVELOPMENT TOOLS
###############################################################################
VITE_DEBUG=true
VITE_HMR=true
